{"ast":null,"code":"import { useUserStore } from '@/store/user';\nexport default {\n  setup() {\n    const userStore = useUserStore();\n    const userInfo = userStore.userInfo;\n    return {\n      userInfo,\n      subMenuVisible: {\n        marketCycle: false,\n        companyData: false,\n        evaluation: false\n      },\n      availableCycles: [1, 2, 3, 4, 5, 6, 7],\n      cyclesToDisplay: []\n    };\n  },\n  methods: {\n    showCycles() {\n      this.subMenuVisible.marketCycle = true;\n      const currentCycle = this.userInfo.cycle;\n      this.cyclesToDisplay = this.availableCycles.filter(cycle => cycle <= currentCycle);\n    },\n    hideCycles() {\n      this.subMenuVisible.marketCycle = false;\n    },\n    showCompanyData() {\n      this.subMenuVisible.companyData = true;\n    },\n    hideCompanyData() {\n      this.subMenuVisible.companyData = false;\n    },\n    showEvaluation() {\n      this.subMenuVisible.evaluation = true;\n    },\n    hideEvaluation() {\n      this.subMenuVisible.evaluation = false;\n    }\n  }\n};","map":{"version":3,"names":["useUserStore","setup","userStore","userInfo","subMenuVisible","marketCycle","companyData","evaluation","availableCycles","cyclesToDisplay","methods","showCycles","currentCycle","cycle","filter","hideCycles","showCompanyData","hideCompanyData","showEvaluation","hideEvaluation"],"sources":["D:\\Bridge1\\src\\components\\DecisionSimulation.vue"],"sourcesContent":["<template>\n  <div>\n    <div id=\"logo\">\n      <router-link to=\"/\" id=\"sitename\">\n        <img src=\"@/assets/logo.png\" height=\"60\" />\n      </router-link>\n    </div>\n\n    <nav class=\"navbar navbar-expand-lg navbar-light bg-light\">\n      <div class=\"container-fluid\">\n        <router-link class=\"navbar-brand\" to=\"/\">sitename</router-link>\n        <div class=\"collapse navbar-collapse\">\n          <ul class=\"navbar-nav me-auto mb-2 mb-lg-0\">\n            <li class=\"nav-item\">\n              <router-link class=\"nav-link\" to=\"/decision\">决策仿真</router-link>\n            </li>\n            <li class=\"nav-item\">\n              <router-link class=\"nav-link\" to=\"/ImportantInformation\">重要信息</router-link>\n            </li>\n            <li class=\"nav-item\">\n              第<span class=\"text-danger\">{{ userInfo?.group }}</span>组 \n              第<span class=\"text-danger\">{{ userInfo?.number }}</span>企业 \n              <span class=\"text-danger\">{{ userInfo?.rival }}</span>位竞争对手 \n              第<span class=\"text-danger\">{{ userInfo?.cycle }}</span>周期\n            </li>\n            <li class=\"nav-item\">\n              <button \n                @click=\"reset\"\n                class=\"btn btn-danger\"\n              >\n                新的一轮\n              </button>\n            </li>\n          </ul>\n          <ul class=\"navbar-nav\">\n            <li class=\"nav-item\">注销</li>\n            <li class=\"nav-item\">我的资料</li>\n          </ul>\n        </div>\n      </div>\n    </nav>\n\n    <div class=\"panel panel-default round\">\n      <div class=\"panel-body\">\n        <div id=\"decision_nav\">\n          <div class=\"decision_nav_left\">\n            <div id=\"my_menu\" class=\"menu\">\n              <div>\n                <span>进行决策</span>\n              </div>\n              <div>\n                <span>数据报表</span>\n                <div>\n                  <a @mouseover=\"showCycles\" @mouseleave=\"hideCycles\">市场周期形势</a>\n                  <div v-if=\"subMenuVisible.marketCycle\">\n                    <router-link\n                      v-for=\"cycle in cyclesToDisplay\"\n                      :key=\"cycle\"\n                      :to=\"`/market/cycle/${cycle}`\"\n                    >\n                      第{{ cycle }}周期\n                    </router-link>\n                  </div>\n\n                  <a @mouseover=\"showCompanyData\" @mouseleave=\"hideCompanyData\">企业数据报表</a>\n                  <div v-if=\"subMenuVisible.companyData\">\n                    <router-link to=\"/report/production\">市场生产数据报告</router-link>\n                    <router-link to=\"/report/costType\">成本类型核算报告</router-link>\n                    <router-link to=\"/report/costDept\">成本发生部门报告</router-link>\n                    <router-link to=\"/report/costUnit\">成本承担单元报告</router-link>\n                    <router-link to=\"/report/profitLoss\">利润亏损核算报告</router-link>\n                    <router-link to=\"/report/afterTaxProfit\">税后利润核算报告</router-link>\n                    <router-link to=\"/report/profitDistribution\">利润分配核算报告</router-link>\n                    <router-link to=\"/report/financial\">生产经营财务报告</router-link>\n                    <router-link to=\"/report/balance\">资产负债合计报告</router-link>\n                    <router-link to=\"/report/marketResearch\">竞争市场调研报告</router-link>\n                  </div>\n                </div>\n              </div>\n              <div>\n                <span>竞争结果报表</span>\n              </div>\n              <div>\n                <a @mouseover=\"showEvaluation\" @mouseleave=\"hideEvaluation\">决策评价总表</a>\n                <div v-if=\"subMenuVisible.evaluation\">\n                  <router-link to=\"/evaluation/market\">市场类指标</router-link>\n                  <router-link to=\"/evaluation/production\">生产类指标</router-link>\n                  <router-link to=\"/evaluation/finance\">财务类指标</router-link>\n                  <router-link to=\"/evaluation/overall\">决策综合评价</router-link>\n                  <router-link to=\"/evaluation/weight\">评价指标权重</router-link>\n                </div>\n              </div>\n            </div>\n          </div>\n\n          <div class=\"decision_nav_right\"></div>\n        </div>\n      </div>\n    </div>\n  </div>\n</template>\n\n<script>\nimport { useUserStore } from '@/store/user';\n\nexport default {\n  setup() {\n    const userStore = useUserStore();\n    const userInfo = userStore.userInfo;\n\n    return {\n      userInfo,\n      subMenuVisible: {\n        marketCycle: false,\n        companyData: false,\n        evaluation: false,\n      },\n      availableCycles: [1, 2, 3, 4, 5, 6, 7],\n      cyclesToDisplay: [],\n    };\n  },\n  methods: {\n    showCycles() {\n      this.subMenuVisible.marketCycle = true;\n      const currentCycle = this.userInfo.cycle;\n      this.cyclesToDisplay = this.availableCycles.filter(cycle => cycle <= currentCycle);\n    },\n    hideCycles() {\n      this.subMenuVisible.marketCycle = false;\n    },\n    showCompanyData() {\n      this.subMenuVisible.companyData = true;\n    },\n    hideCompanyData() {\n      this.subMenuVisible.companyData = false;\n    },\n    showEvaluation() {\n      this.subMenuVisible.evaluation = true;\n    },\n    hideEvaluation() {      \n      this.subMenuVisible.evaluation = false; \n    },\n  },\n};\n</script>\n\n<style scoped>\n.navbar {\n  background-color: #112233; \n}\n\n.btn-danger {\n  background-color: red; \n  color: white; \n}\n\n.text-danger {\n  color: red; \n}\n\n\n.decision_nav_left {\n  width: 100px; \n  float: left; \n}\n\n.decision_nav_right {\n  width: 700px; \n  float: right; \n}\n</style>\n\n"],"mappings":"AAuGA,SAASA,YAAW,QAAS,cAAc;AAE3C,eAAe;EACbC,KAAKA,CAAA,EAAG;IACN,MAAMC,SAAQ,GAAIF,YAAY,CAAC,CAAC;IAChC,MAAMG,QAAO,GAAID,SAAS,CAACC,QAAQ;IAEnC,OAAO;MACLA,QAAQ;MACRC,cAAc,EAAE;QACdC,WAAW,EAAE,KAAK;QAClBC,WAAW,EAAE,KAAK;QAClBC,UAAU,EAAE;MACd,CAAC;MACDC,eAAe,EAAE,CAAC,CAAC,EAAE,CAAC,EAAE,CAAC,EAAE,CAAC,EAAE,CAAC,EAAE,CAAC,EAAE,CAAC,CAAC;MACtCC,eAAe,EAAE;IACnB,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,UAAUA,CAAA,EAAG;MACX,IAAI,CAACP,cAAc,CAACC,WAAU,GAAI,IAAI;MACtC,MAAMO,YAAW,GAAI,IAAI,CAACT,QAAQ,CAACU,KAAK;MACxC,IAAI,CAACJ,eAAc,GAAI,IAAI,CAACD,eAAe,CAACM,MAAM,CAACD,KAAI,IAAKA,KAAI,IAAKD,YAAY,CAAC;IACpF,CAAC;IACDG,UAAUA,CAAA,EAAG;MACX,IAAI,CAACX,cAAc,CAACC,WAAU,GAAI,KAAK;IACzC,CAAC;IACDW,eAAeA,CAAA,EAAG;MAChB,IAAI,CAACZ,cAAc,CAACE,WAAU,GAAI,IAAI;IACxC,CAAC;IACDW,eAAeA,CAAA,EAAG;MAChB,IAAI,CAACb,cAAc,CAACE,WAAU,GAAI,KAAK;IACzC,CAAC;IACDY,cAAcA,CAAA,EAAG;MACf,IAAI,CAACd,cAAc,CAACG,